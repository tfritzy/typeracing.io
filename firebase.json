{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "frontend/dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "/français",
        "destination": "/français.html"
      },
      {
        "source": "/español",
        "destination": "/español.html"
      },
      {
        "source": "/deutsch",
        "destination": "/deutsch.html"
      },
      {
        "source": "/italiano",
        "destination": "/italiano.html"
      },
      {
        "source": "/português",
        "destination": "/português.html"
      },
      {
        "source": "/dutch",
        "destination": "/dutch.html"
      },
      {
        "source": "/polski",
        "destination": "/polski.html"
      },
      {
        "source": "/русский",
        "destination": "/русский.html"
      },
      {
        "source": "/हिंदी",
        "destination": "/हिंदी.html"
      },
      {
        "source": "/copypastas",
        "destination": "/copypastas.html"
      },
      {
        "source": "/shakespeare",
        "destination": "/shakespeare.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "firestore": {
      "port": 8090
    },
    "hosting": {
      "port": 5000
    }
  }
}
